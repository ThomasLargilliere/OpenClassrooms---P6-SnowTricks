{% extends 'base.html.twig' %}

{% block title %} Retrouver votre mot de passe {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/forms/login.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
    <link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    {{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <div class="fadeIn first">
            <i class="fa-solid fa-user"></i>
        </div>
        {{ form_start(formProfil) }}
            <div class="fadeIn first">
            {{ form_row(formProfil.avatar) }}
            {% if app.user.avatar %}
                <div class="user-avatar-profil">
                    <img class="img-fluid mb-4" src="{{ asset('uploads/avatars/' ~ app.user.avatar | trans) }}" alt="Avatar de profil">
                </div>
            {% endif %}
            </div>
            {{ form_row(formProfil.email) }}
            {{ form_row(formProfil.pseudo) }}
            {{ form_row(formProfil.firstName) }}
            {{ form_row(formProfil.lastName) }}
            <input type="submit" class="fadeIn second mt-4" value="Modifier mon profil">
        {{ form_end(formProfil) }}
    </div>
</div>

{% endblock %}
