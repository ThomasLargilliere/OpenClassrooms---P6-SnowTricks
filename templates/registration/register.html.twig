{% extends 'base.html.twig' %}

{% block title %} Connexion {% endblock %}

{% block stylesheets %}
<link href="{{ asset('css/forms/login.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('css/style.css') }}" type="text/css" rel="stylesheet" />
<link href="{{ asset('css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
{{ encore_entry_link_tags('app') }}
{% endblock %}

{% block body %}

<div class="wrapper fadeInDown">
    <div id="formContent">
        <div class="fadeIn first">
            <i class="fa-solid fa-user"></i>
        </div>
        <form method="post">
            {{ form_start(registrationForm) }}
            <div class="form-group mb-4">
                {{ form_row(registrationForm.email) }}
            </div>
            <div class="form-group mb-4">
                {{ form_row(registrationForm.pseudo) }}
            </div>
            <div class="form-group mb-4">
                {{ form_row(registrationForm.plainPassword) }}
            </div>
            <div class="form-group mb-4">
                {{ form_row(registrationForm.firstName) }}
            </div>
            <div class="form-group">
                {{ form_row(registrationForm.lastName) }}
            </div>
            <input type="submit" class="fadeIn six" value="S'inscrire">
            {{ form_end(registrationForm)}}
        </form>
        <div id="formFooter">
            <a class="underlineHover fadeIn six" href="{{path('app_login')}}">Vous avez déjà un compte ? Connectez-vous</a>
        </div>
    </div>
</div>

{% endblock %}